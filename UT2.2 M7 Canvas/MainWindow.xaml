            <Rectangle Canvas.Top="5" Canvas.Left="5"/>
            <Rectangle Canvas.Top="5" Canvas.Right="5"/>
            <Rectangle Canvas.Bottom="5" Canvas.Left="5"/>
            <Rectangle Canvas.Bottom="5" Canvas.=Right"5"/>

        </Canvas>
</Window>
