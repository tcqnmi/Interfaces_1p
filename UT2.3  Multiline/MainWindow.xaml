        <TextBlock Grid.Row="4" TextAlignment="Right" Name="PieVentana">
                   <Bold>DAM2</Bold>-2021 CMA
        </TextBlock>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button  Content="_Aceptar" Margin="2"/>
            <Button Content="_Cancelar" Margin="2"/>
        </StackPanel>
        

    </Grid>
</Window>
