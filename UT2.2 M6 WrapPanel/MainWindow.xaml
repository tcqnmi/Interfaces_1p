<Window x:Class="UT2._2_M6_WrapPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UT2._2_M6_WrapPanel"
        mc:Ignorable="d"
        Title="UT2.2 M6 WrapPanel" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Fill" Value="DarkSalmon"/>
        </Style>
    </Window.Resources>
    <WrapPanel>
        <Rectangle Fill="AliceBlue"/>
        <Rectangle Fill="#FF911515"/>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF966464" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle/>
        <Rectangle/>
        <Rectangle/>
        <Rectangle/>
        <Rectangle Fill="#FF6E3E2E"/>


    </WrapPanel>
</Window>
